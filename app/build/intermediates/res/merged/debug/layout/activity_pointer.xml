<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    android:orientation="horizontal" >

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight=".15"
        android:orientation="vertical" >

        <cz.uhk.janMachacek.UI.CompasView
            xmlns:android="http://schemas.android.com/apk/res/android"
            android:id="@+id/compas"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/object_name"
            style="@style/style_h1"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="50dp"
            android:gravity="center_horizontal"
            android:text="" />

        <TextView
            android:id="@+id/object_constellation"
            style="@style/style_detail_object_white_text"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:gravity="center_horizontal"
            android:text="" />

        <TextView
            android:id="@+id/object_type"
            style="@style/style_detail_object_white_text"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:gravity="center_horizontal"
            android:text="" />
    </LinearLayout>

    <cz.uhk.janMachacek.UI.HorizontView
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/horizont"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight=".85" />

</LinearLayout>