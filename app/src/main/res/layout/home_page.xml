<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/relative_layout"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@color/black"
    android:gravity="center"
    android:orientation="vertical">


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:orientation="vertical">

        <ImageButton
            android:id="@+id/katalog"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="50dp"
            android:adjustViewBounds="false"
            android:background="@color/black"
            android:baselineAlignBottom="false"
            android:contentDescription="@string/catalog"
            android:onClick="startCatalog"
            android:src="@drawable/observatory_m" />

        <ImageButton
            android:id="@+id/buttonDiary"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="50dp"
            android:adjustViewBounds="false"
            android:background="@color/black"
            android:onClick="startDiary"
            android:src="@drawable/diary_m" />

        <ImageButton
            android:id="@+id/imageButton2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/katalog"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="50dp"
            android:adjustViewBounds="false"
            android:background="@color/black"
            android:onClick="startSettings"
            android:src="@drawable/settings_m" />

    </LinearLayout>

</LinearLayout>



