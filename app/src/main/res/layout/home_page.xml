<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/relative_layout"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@color/black"
    android:gravity="center"
    android:orientation="vertical"
    >

    <!--<Button-->
    <!--android:id="@+id/the_button"-->
    <!--android:layout_width="wrap_content"-->
    <!--android:layout_height="wrap_content"-->
    <!--android:text="Centered Button"/>-->



        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:orientation="vertical">

            <ImageButton
                android:id="@+id/katalog"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginBottom="50dp"
                android:adjustViewBounds="false"
                android:background="@color/black"
                android:baselineAlignBottom="false"
                android:contentDescription="@string/catalog"
                android:onClick="startCatalog"
                android:src="@drawable/observatory_m" />

            <ImageButton
                android:id="@+id/buttonDiary"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginBottom="50dp"
                android:adjustViewBounds="false"
                android:background="@color/black"
                android:onClick="startDiary"
                android:src="@drawable/diary_m" />

            <ImageButton
                android:id="@+id/imageButton2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/katalog"
                android:layout_centerHorizontal="true"
                android:adjustViewBounds="false"
                android:background="@color/black"
                android:onClick="startSettings"
                android:layout_marginBottom="50dp"
                android:src="@drawable/settings_m" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/signo_in_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:orientation="vertical">


            <com.google.android.gms.common.SignInButton
                android:id="@+id/sign_in_button"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:adjustViewBounds="true"
                />
        </LinearLayout>

    <LinearLayout
        android:id="@+id/signo_out_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:visibility="visible"
        android:orientation="vertical">

        <TextView
            android:id="@+id/user_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="user name"
            />


        <Button
            android:id="@+id/sign_out_button"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:adjustViewBounds="true"
            android:text="Odhlásit z účtu Googlu"
            android:onClick="onClick"
            />
    </LinearLayout>



</LinearLayout>